{
  "name": "Ciesta Assistant Dev",
  "image": "python:latest",

  // === Workspace structure ===
  "workspaceFolder": "/ciesta-assistant",
  "workspaceMount": "source=/home/hoangphuc/Documents/ciesta-assistant,target=/ciesta-assistant,type=bind",

  // === Run configuration ===
  "runArgs": [
    "--env=DISPLAY",
    "--env=WAYLAND_DISPLAY",
    "--env=XDG_RUNTIME_DIR=/run/user/1000",
    "--volume=/run/user/1000:/run/user/1000",
    "--device=/dev/dri",
    "--mount=type=tmpfs,target=/tmp",
    "--network=host" // ✅ Cho phép Rasa/Flask hoạt động local mà không lỗi connection
  ],

  // === Add non-root user ===
  "remoteUser": "vscode",

  // === VSCode customizations ===
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "ms-python.black-formatter",
        "ms-azuretools.vscode-docker",
        "ms-python.isort",
        "eamodio.gitlens"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "terminal.integrated.shell.linux": "/bin/bash",
        "python.analysis.typeCheckingMode": "basic"
      }
    }
  },

  // === After container build ===
  "postCreateCommand": "pip install -r requirements.txt",

  // === Optional: forward port cho Rasa hoặc Flask ===
  "forwardPorts": [5000, 5055, 8000],

  // === Features (gợi ý thêm cho dev tiện) ===
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "upgradePackages": true
    }
  }
}
